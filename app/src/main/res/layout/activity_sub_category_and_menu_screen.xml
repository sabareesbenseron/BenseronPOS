<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:orientation="vertical"
    tools:context="com.example.saku1.benseronemv.Activity.SubCategoryAndMenuScreenActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_sub_category_and_menu_subcategory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_sub_category_and_menu_menuitem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_sub_category_and_menu_selecteditem"
        android:layout_width="match_parent"
        android:background="#646161"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sub_cat_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/BevoGreen"
        app:fabSize="auto"
        android:src="@drawable/ic_order_complete"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="bottom|end" />

</FrameLayout>
